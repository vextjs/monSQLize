{
  "name": "monsqlize",
  "version": "1.0.0",
  "description": "一个面向多数据库的统一 MongoDB 风格读写 API，提供智能缓存、事务支持、分布式部署等企业级特性",
  "main": "lib/index.js",
  "types": "./index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mongodb",
    "database",
    "orm",
    "cache",
    "transaction",
    "distributed",
    "pagination",
    "performance",
    "mongodb-driver",
    "nosql",
    "query-builder",
    "api"
  ],
  "author": "vext.js Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vextjs/monSQLize.git"
  },
  "bugs": {
    "url": "https://github.com/vextjs/monSQLize/issues"
  },
  "homepage": "https://github.com/vextjs/monSQLize#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "node test/run-tests.js",
    "test:unit": "node test/run-tests.js",
    "test:performance": "node test/performance/transaction-benchmark.js",
    "test:coverage": "nyc --reporter=text --reporter=lcov node test/run-tests.js",
    "coverage": "nyc --reporter=text --reporter=lcov --reporter=html node test/run-tests.js",
    "benchmark": "node test/benchmark/run-benchmarks.js",
    "lint": "eslint lib/ test/ --ext .js",
    "lint:fix": "eslint lib/ test/ --ext .js --fix",
    "prepublishOnly": "npm test && npm run lint"
  },
  "dependencies": {
    "mongodb": "^6.17.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "ioredis": "^5.8.2"
  },
  "devDependencies": {
    "benchmark": "^2.1.4",
    "chai": "^6.2.1",
    "eslint": "^8.57.0",
    "mocha": "^11.7.5",
    "mongodb-memory-server": "^10.1.2",
    "nyc": "^15.1.0",
    "sinon": "^21.0.0"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**",
      "examples/**",
      "scripts/**",
      "reports/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 65
  }
}
